<Window x:Class="NotizApp.Notiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotizApp"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Notiz" Height="300" Width="300">
    <Grid>
        <RichTextBox x:Name="textBox" Margin="0,0,0,0" HorizontalAlignment="Stretch" Text="TextBox"
         DataObject.Pasting="OnPasting"
         AcceptsTab="True"
         AcceptsReturn="True"
         ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True">
        </RichTextBox>
    </Grid>
</Window>
